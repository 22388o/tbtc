\begin{tikzpicture}
  \begin{umlseqdiag}
    \umlbasicobject[fill=white]{Bitcoin}
    \umlbasicobject[fill=white]{tECDSA Signers}
    \umlbasicobject[fill=white]{Deposit Contract}

    \tikzset{
      tikzuml call-msg style/.append style={text width=2.5cm,align=center},
