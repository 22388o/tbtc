          \begin{umlcall}[op=broadcast redemption tx]{tECDSA Signers}{Bitcoin}
            \begin{umlcallself}[op=wait for confirmation]{tECDSA Signers}
              \begin{umlcall}[op=\texttt{increaseFee},dt=5]{tECDSA Signers}{Deposit Contract}
              \end{umlcall}
            \end{umlcallself}
          \end{umlcall}
        \end{umlcallself}
      \end{umlcall}
    \end{umlfragment}

    \umlsdnode[dt=7.5]{Bitcoin}
    \umlsdnode[dt=2]{tECDSA Signers}
    \umlsdnode[dt=2]{Deposit Contract}
  \end{umlseqdiag}
